<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddPlayersFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/addp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ivFondoBlanco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:src="@android:color/background_light"
        app:layout_constraintTop_toTopOf="@+id/imageFondo"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextNames"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/nombres"
        android:ems="10"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:hint="Introduce un nombre"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonComenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Comenzar"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNames" />

    <TableLayout
        android:layout_width="238dp"
        android:layout_height="231dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComenzar"
        app:layout_constraintVertical_bias="0.113">

        <TableRow>

            <TextView
                android:id="@+id/textView1Columna"
                android:fontFamily="@font/quicksand_bold"
                android:padding="3dip"
                android:text="1.Jose \n2.pedro\n3.pedro\n4.pedro\n5.pedro" />

            <TextView
                android:id="@+id/textView2Columna"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:padding="3dip"
                android:text="1.Jose \n2.pedro\n3.pedro\n4.pedro\n5.pedro" />
            />

            <TextView
                android:id="@+id/textView3Columna"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="left"
                android:padding="3dip"
                android:text="1.Jose \n2.pedro\n3.pedro\n4.pedro\n5.pedro" />
            />
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="JUGADORES"
        android:textColor="@color/colorTextWhite"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageFondo" />

</android.support.constraint.ConstraintLayout>